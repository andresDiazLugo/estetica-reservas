<%= form_for(resource, as: resource_name, url: password_path(resource_name),html: { class: "containerForm" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "Enviar" %>
  </div>
<% end %>

<div class="links">
    <%= link_to "No tienes cuenta? Crear una cuenta", new_registration_path(resource_name) %><br />
    <%= link_to "Ya tinenes cuenta? iniciar Sesion", new_session_path(resource_name) %><br />
</div>
